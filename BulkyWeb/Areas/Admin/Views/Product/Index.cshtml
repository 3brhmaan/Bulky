@model List<Product>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-black py-3 ml-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row  pb-3">
			<div class="col-6">
				@* <h2 class="text-primary">
					Category List
				</h2> *@
			</div>
			<div class="col-6 text-end">
				<a asp-action="Upsert" asp-controller="Product" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Author</th>
				<th>List Price</th>
				<th>Category</th>
				
			</tr>
			</thead>


			<tbody>
			@foreach (var category in Model)
			{
				<tr>
					<td>@category.Title</td>
					<td>@category.ISBN</td>
					<td>@category.Author</td>
					<td>@category.ListPrice</td>
					<td>

					</td>
					

					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
			</tbody>

		</table>
	</div>
</div>